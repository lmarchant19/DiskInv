@model List<DiskInventory.Models.DiskHasBorrower>
@{
    ViewBag.Title = "Checkin / Checkout Manager";
}
<h1>@ViewBag.Title</h1>

<a asp-controller="DiskHasBorrower" asp-action="Add">Add</a>
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Disk Name</th>
                <th>Borrower Last Name</th>
                <th>Borrower First Name</th>
                <th>Borrowed Date</th>
                <th>Returned Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var diskhasborrower in Model)
            {
            <tr>
                <td>@diskhasborrower.Disk.DiskName</td>
                <td>@diskhasborrower.Borrower.Lname</td>
                <td>@diskhasborrower.Borrower.Fname</td>
                <td>@diskhasborrower.BorrowedDate</td>
                <td>@diskhasborrower.ReturnedDate</td>
                <td>
                    <a asp-controller="DiskHasBorrower" asp-action="Edit" asp-route-id="@diskhasborrower.Id">Edit</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No data found.</div>
}